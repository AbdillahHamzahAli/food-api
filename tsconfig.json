{
  "include": ["api/*.ts", "src/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  }
}
